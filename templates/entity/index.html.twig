{% extends 'base.html.twig' %}

{% block head_title %}
    Entity index
{% endblock %}

{% block main %}
    <h1>Entity index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EntityLabel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.entityLabel }}</td>
                    <td>
                        <a href="{{ path('app_entity_show', {'id': entity.id}) }}">show</a>
                        <a href="{{ path('app_entity_edit', {'id': entity.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_entity_new') }}">Create new</a>
{% endblock %}

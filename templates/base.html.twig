<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block head_title %}
                Demo
            {% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">

            {% block body %}
                {% block header %}{% endblock %}
                <div class="row">
                    <div class="col-2">
                        {% block side %}
                            <ul>
                                <li><a href='/'>Home</a></li>
                            </ul>
                        {% endblock %}
                    </div>
                    <div class="col-10">
                        {% block main %}{% endblock %}
                    </div>
                </div>
                {% block footer %}{% endblock %}
            {% endblock %}
            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}
        </div>
    </body>
</html>
